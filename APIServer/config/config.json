{
    "router": {
        "enableCors": true,
        "useAppMiddlewares": {
            "appMiddlewareAlias": true,
            "cors": true
        },
        "middlewares": {
            "firstMiddlewareAlias": "App\\Middleware\\Route\\RouteMiddlewares:myMiddleware",
            "secondMiddlewareAlias": "App\\Middleware\\Route\\RouteMiddlewares:myMiddleware2",
            "appMiddlewareAlias": "App\\Middleware\\App\\AppMiddlewareClass",
            "cors": "ZXC\\Modules\\Cors\\Middlewares\\Cors"
        },
        "notFoundHandler": "App\\RouteMiddlewares:notFound",
        "routes": [
            {
                "middlewares": [
                    "firstMiddlewareAlias"
                ],
                "method": "GET",
                "route": "/",
                "handler": "App\\Application:hello",
                "children": {
                    "middlewares": [
                        "firstMiddlewareAlias",
                        "secondMiddlewareAlias"
                    ],
                    "route": ":user",
                    "handler": "App\\Application:helloUser",
                    "children": {
                        "middlewares": [],
                        "route": "static/profile",
                        "handler": "App\\Application:profile"
                    }
                }
            },
            {
                "middlewares": [
                    "firstMiddlewareAlias"
                ],
                "method": "GET",
                "route": "/:user/static",
                "handler": "App\\Application:helloStatic"
            },
            {
                "middlewares": [],
                "method": "POST",
                "route": "/module/auth/login",
                "handler": "ZXC\\Modules\\Auth\\Handlers\\AuthenticationLogin"
            },
            {
                "middlewares": [],
                "method": "POST",
                "route": "/module/auth/refresh/token",
                "handler": "ZXC\\Modules\\Auth\\Handlers\\AuthenticationRefreshToken"
            },
            {
                "middlewares": [],
                "method": "POST",
                "route": "/module/auth/registration",
                "handler": "ZXC\\Modules\\Auth\\Handlers\\AuthenticationRegistration"
            },
            {
                "middlewares": [],
                "method": "GET",
                "route": "/init/xsrf/protection",
                "handler": "ZXC\\Modules\\XSRF\\Handlers\\XSRFApp"
            },
            {
                "middlewares": [],
                "method": "GET",
                "route": "/fetch/app/config",
                "handler": "App\\Modules\\AppConfig\\Handlers\\AppConfig"
            }
        ]
    },
    "modules": {
        "AppConfig": {
            "class": "App\\Modules\\AppConfig\\AppConfig",
            "options": {
                "public": {
                    "namespace": "task_view"
                },
                "private": {
                }
            }
        },
        "Auth": {
            "class": "ZXC\\Modules\\Auth\\Auth",
            "defer": false,
            "options": {
                "storageProvider": "ZXC\\Modules\\Auth\\Storages\\AuthPgSqlStorage",
                "authTypeProvider": "ZXC\\Modules\\Auth\\Providers\\AuthJwtTokenProvider",
                "authTypeProviderOptions": {
                    "secret": "[)1231&^^*&^%00()(]",
                    "alg": "HS256",
                    "accessLifeTime": 15,
                    "refreshLifetime": 400,
                    "tokenStorage": "ZXC\\Modules\\Auth\\Storages\\AuthTokenStoragePgSql"
                },
                "email": {
                    "confirm": true,
                    "codeProvider": "App\\Auth\\RegistrationCodeProvider"
                },
                "credentialStorage": ""
            }
        },
        "DB": {
            "class": "ZXC\\Modules\\DB\\DB",
            "defer": true,
            "options": {
                "dsn": "pgsql:host=localhost;dbname=task_view_server",
                "username": "test_user",
                "password": "123456"
            }
        },
        "Cors": {
            "class": "ZXC\\Modules\\Cors\\Cors",
            "defer": false,
            "options": {
                "origin": "http://localhost:3000",
                "methods": [
                    "GET",
                    "POST",
                    "PUT",
                    "PATCH",
                    "DELETE",
                    "HEAD",
                    "OPTIONS"
                ],
                "credentials": true,
                "maxAge": 86400,
                "headers": [
                    "content-type",
                    "set-cookie",
                    "X-XSRF-TOKEN",
                    "INIT-XSRF",
                    "XSRF-TOKEN",
                    "Accept",
                    "Authorization"
                ],
                "expose": [
                    "Set-Cookie",
                    "content-type"
                ]
            }
        },
        "Session": {
            "class": "ZXC\\Modules\\SessionsStorage\\SessionManager",
            "defer": false,
            "options": {
                "provider": "db",
                "sessionParams": {
                    "name": "TV",
                    "use_cookies": 1,
                    "cookie_path": "/"
                }
            }
        }
    }
}
